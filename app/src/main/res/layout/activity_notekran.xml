<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mor2"
    android:padding="20dp"
    tools:context=".notekran">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ust_yazi"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Tarih"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:id="@+id/fotoekle"
            android:layout_gravity="center"
            android:src="@drawable/manzara"
            android:layout_marginTop="1dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:hint="Anı Başlığı"
            android:textColor="@color/mor"
            android:id="@+id/editbaslik"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/mod"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Modunuz: "
                android:gravity="center|left"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

            </Spinner>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:hint="İçerik"
            android:textColor="@color/mor"
            android:id="@+id/editicerik"
            android:lines="8"
            android:gravity="top"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notuekle"
        android:text="Notu Ekle"
        android:background="@color/mor"
        android:textColor="@color/white"
        android:layout_gravity="center"/>


    </LinearLayout>



</LinearLayout>